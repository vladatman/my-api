{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "JSON Schema for steam games",
    "description": "List of steam games.",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "Game id",
            "minimum": 0
        },
        "title": {
            "type": "string",
            "description": "Game title"
        },
        "release": {
            "type": "string",
            "format": "date",
            "description": "Game release year"
        },
        "developer": {
            "type": "string",
            "description": "Game developer"
        },
        "genre": {
            "type": "string",
            "description": "Genre of the game"
        },
        "price": {
            "type": "number",
            "description": "Price of the game in steam store",
            "minimum": 0,
            "multipleOf": 0.01
        }
    }
}